
<p id="notice"><%= notice %></p>

<div class="container">

  <p id="notice"><%= notice %></p>

  <%= link_to "Take Survey", new_submission_path(survey_id: @survey.id) %>
  <%= new_submission_url(survey_id: @survey.id) %>

  <div class="row">
    <div class="col-md-3">
      <h3>Survey Title</h3>
      <p><%= @survey.title %></p>
    </div>
    <div class="col-md-3">
      <h3>Survey Description</h3>
      <p><%= @survey.description %></p>
    </div>
    <div class="col-md-3">
      <h3>Published</h3>
      <p><%= @survey.published %></p>
    </div>
    <div class="col-md-3">
      <h3>Actions</h3>
      <p><%= link_to 'Edit', edit_survey_path(@survey) %></p>
      <p><%= link_to 'Destroy', @survey, method: :delete, data: { confirm: 'Are you sure?' } %></p>
    </div>
  </div>

<h2> Questions </h2>
  <%= @survey.questions.each do |q| %>
    <h3>Question Type: <%= q.question_type %></h3>
    <h4>Text: <%= q.text %></h4>
    <p>Description: <%= q.description %></p>
    <p>Required? <%= q.required %></p>

  <% end %>

  <h3>URL to send out</h3>
  <p><%= new_submission_url(/\W?survey_id=#{@survey.id}/) %></p>


  <%= link_to 'Back', surveys_path %>
</div>
