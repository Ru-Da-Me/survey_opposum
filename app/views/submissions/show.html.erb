<div class="container">

  <p id="notice"><%= notice %></p>

  <p>
    <strong>Your Submission</strong>
  </p>

  <h3><%= @submission.survey.title %></h3>
  <h3><%= @submission.survey.description %></h3>

  <% @submission.survey.questions.each do |q| %>
        <h2><%= "Question" %>
        <h3><%= q.text%></h3>
        <h4><%= q.description %></h4>
        <% if q.required %>
          <p><%= "required" %></p>
        <% else %>
          <p><%= "optional" %></p>
        <% end %>
    <% end %>    

  <%= link_to 'Back', submissions_path %>
</div>
