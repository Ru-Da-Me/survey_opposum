<div class="container">

  <%= form_for(@submission) do |f| %>
    <% if @submission.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@submission.errors.count, "error") %> prohibited this submission from being saved:</h2>

        <ul>
        <% @submission.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <h3><%= @submission.survey.title %></h3>
    <h3><%= @submission.survey.description %></h3>
    <%= f.hidden_field :survey_id %>

    <% @submission.survey.questions.each do |q| %>
          <h2><%= "Question" %>
          <h3><%= q.text%></h3>
          <h4><%= q.description %></h4>
          <% if q.required %>
            <p><%= "required" %></p>
          <% else %>
            <p><%= "optional" %></p>
          <% end %>
        <% if q.question_type == "Yes/No"%>
          <div class="field">
            <br><%= radio_button_tag "Answer", "Yes" %> Yes
            <br><%= radio_button_tag "answer_text[#{q.id}]", "No" %> No
          </div>
        <%elsif q.question_type == "Short"%>
          <div class="field">
            <%= label_tag "Answer" %><br>
            <%= text_field_tag "answer_text[#{q.id}]" %>
          </div>
        <%else q.question_type == "Long"%>
          <div class="field">
            <%= label_tag "Answer" %><br>
            <%= text_area_tag "answer_text[#{q.id}]" %>
          </div>
        <% end %>
    <%end%>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
